{
	"name": "@web3-project-template/smart-contracts",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"dev": "npx hardhat node",
		"lint:fix": "prettier --write 'scripts/**/*.{js,ts}' 'test/**/*.{js,ts}' 'tasks/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json && solhint contracts/**/*.sol",
		"lint": "tslint --config tslint.json --project tsconfig.json && solhint contracts/**/*.sol",
		"format": "prettier --check \"**/*.{ts,js,sol}\"",
		"format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
		"build": "npm run clean && npm run compile",
		"clean": "npx hardhat clean",
		"compile": "hardhat compile",
		"coverage": "npx hardhat coverage",
		"deploy:local": "npx hardhat --network hardhat deploy --export ./lib/export.json",
		"deploy:goerli": "npx hardhat --network goerli deploy --export ./lib/export.json",
		"deploy:mainnet": "npx hardhat --network mainnet deploy --export ./lib/export.json",
		"deploy:mumbai": "npx hardhat --network mumbai deploy --export ./lib/export.json",
		"deploy:polygon": "npx hardhat --network polygon deploy --export ./lib/export.json",
		"test": "npx hardhat test --show-stack-traces",
		"verify": "npx hardhat verify"
	},
	"files": [
		"dist/src/",
		"src/",
		"LICENSE",
		"README.md"
	],
	"author": "mfbevan",
	"license": "MIT",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.3",
		"@nomicfoundation/hardhat-toolbox": "^1.0.2",
		"@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
		"@nomiclabs/hardhat-etherscan": "^3.1.0",
		"@openzeppelin/contracts": "^4.7.1",
		"@openzeppelin/hardhat-upgrades": "^1.19.1",
		"@shopify/eslint-plugin": "^40.4.0",
		"@typechain/ethers-v5": "^10.1.0",
		"@typechain/hardhat": "^6.1.2",
		"@types/chai": "^4.3.1",
		"@types/chai-as-promised": "^7.1.5",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.6.1",
		"@typescript-eslint/eslint-plugin": "^4.31.0",
		"@typescript-eslint/parser": "^4.31.0",
		"chai": "^4.3.6",
		"chai-as-promised": "^7.1.1",
		"dotenv": "^16.0.1",
		"eslint": "^7.32.0",
		"eslint-config-labrys": "^0.6.4",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"ethers": "^5.6.9",
		"hardhat": "^2.10.1",
		"hardhat-deploy": "^0.11.12",
		"hardhat-gas-reporter": "^1.0.8",
		"hardhat-preprocessor": "^0.1.4",
		"prettier": "^2.7.1",
		"prettier-plugin-solidity": "^1.0.0-dev.23",
		"solhint": "^3.3.7",
		"solidity-coverage": "^0.7.21",
		"ts-node-dev": "^2.0.0",
		"typechain": "^8.1.0",
		"typescript": "^4.7.4"
	}
}
